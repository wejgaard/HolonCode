<Source> proc PrintChapter {} {
	if {[NoSections]} {return}
	set current [Section]
	SetSection [FirstSection]
 	StartPrint [Chapter]
	PrintHeader
	PrintTitle "Chapter" [Chapter]
	PrintText [Chapter]
	WriteLine ""
	WriteLine ""
	PrintSectionsList
	while {[Section] != [Chapter]} {
		PrintSectionPages 
		SetSection [NextSection]
	}
	EndPrint
	SetSection $current
}
