<Source> proc WriteChapter {} {
	global import
	if {$import} {return}                  
	if {[NoSections]} {return}
	if [NoExtension] return	
	set f [OpenWriteFile]
	set current [Section]
	SetSection [FirstSection]  
	while {[Section] != [Chapter]} {
		WriteSection $f 
		SetSection [NextSection]
	}
	SetSection $current
	close $f
}
